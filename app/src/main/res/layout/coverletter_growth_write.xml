<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="60dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="575.5"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="33" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="21" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="315"
                        android:background="#FFFFFF"
                        android:gravity="center_horizontal"
                        android:hint="제목을 입력해주세요."
                        android:letterSpacing="-0.37"
                        android:shadowColor="#80909090"
                        android:textColorHint="#3C475058" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="24" />
                </LinearLayout>

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />
            </TableRow>

            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="16" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="328"
                        android:background="#979797" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="16" />
                </LinearLayout>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="278" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="61"
                        android:gravity="end"
                        android:letterSpacing="-0.02"
                        android:textColor="#CC475058"
                        android:textSize="15sp"
                        tools:text="0/1000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="21" />
                </LinearLayout>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" />
            </TableRow>

            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="440"
                    android:orientation="horizontal"
                    android:weightSum="360">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="440dp"
                        android:layout_weight="17" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="440dp"
                        android:layout_weight="327"
                        android:gravity="start"
                        android:letterSpacing="-0.33"
                        android:textColorhint="#CC475058"
                        android:textSize="15sp"
                        android:background="#f1f1f1"
                        tools:hint="내용을 입력해주세요." />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_weight="16" />
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="34.5" />

            </TableRow>


        </TableLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>