<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="19sp"
            android:background="#4dabff"
            android:textColor="#ffffff"
            android:gravity="center"
            tools:text="자기소개서" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="96.8dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            android:textSize="16sp"
            tools:text="성장과정" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="94.4dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            android:textSize="16sp"
            tools:text="학창시절" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="95.4dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            android:textSize="16sp"
            tools:text="취미특기" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="95.4dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            android:textSize="16sp"
            tools:text="가치관" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="95.4dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            tools:text="지원동기" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="107.1dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textColor="#475058"
            tools:text="기타사항" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/coverletter_icon_grow" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>