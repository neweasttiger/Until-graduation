<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="60dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#4dabff"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="19sp"
            tools:text="자기소개서"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-103dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/Growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="성장과정" />

            <ImageView
                android:id="@+id/image_Growth"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_toLeftOf="@id/Growth"
                app:srcCompat="@drawable/coverletter_icon_grow"
                />


            <TextView
                android:id="@+id/School"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Growth"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="학창시절" />

            <TextView
                android:id="@+id/Hobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/School"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="취미특기" />

            <TextView
                android:id="@+id/Values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Hobby"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="가치관" />

            <TextView
                android:id="@+id/Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Values"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="지원동기" />

            <TextView
                android:id="@+id/Else"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Apply"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:letterSpacing="-0.02"
                android:textColor="#475058"
                android:textSize="16sp"
                tools:text="기타사항" />
        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>