<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="60dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#4dabff"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="19sp"
            tools:text="자기소개서" />

        <TableLayout
            android:id="@+id/Cover_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_Growth"
                    android:layout_width="28dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/coverletter_icon_grow" />

                <TextView
                    android:id="@+id/Growth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="성장과정" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/School"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="90dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="학창시절" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/Hobbies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="82dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="취미특기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/Values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="21dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="가치관" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/Apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="37dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="지원동기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>

            <TableRow android:layout_height="161dp">

                <TextView
                    android:id="@+id/Else"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="101dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:textColor="#475058"
                    android:textSize="16sp"
                    tools:text="기타사항" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:letterSpacing="0.06"
                    android:textColor="#475058"
                    android:textSize="15sp"
                    tools:text="(0)" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>