<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RealAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <!--Status Bar 배경색-->
        <item name="colorPrimary">@color/sky_blue</item>
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/sky_blue</item>
        <!--Status Ba        <item name="android:elevation">2dp</item>
        <item name="android:shadowColor">@color/black_25</item>r 그림자-->

        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarSize">44dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Splash 이미지-->
        <item name="android:windowBackground">@drawable/img_splash</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">19sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">17.2sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#475058</item>
    </style>
</resources>
