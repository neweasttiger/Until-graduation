<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:top="1dp" android:left="1dp">
                <shape>
                    <gradient
                        android:startColor="#21000000"
                        android:endColor="#fff5f5f5"
                        android:angle="270" />
                    <corners android:radius="7.7dp" />

                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="3dp">
                <shape>
                    <corners android:radius="6dp"/>
                    <solid android:color="#ffffff" />
                    <stroke android:width="1dp" android:color="#f0f0f0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>


